<div class='row'>
	<div class='span2'>
		<div class='well'>
			<strong>Instructions</strong>
			<p>
				It's Simple! Choose a product, and then choose 2 variants to compare.
			</p>
		</div>
		<div class="well">
			<strong>Editing</strong>
			<p>
				You can also double-click the value of certain fields to edit them.
			</p>
		</div>
	</div>
	<div class='main-panel span10'>
		<%= form_tag "/compare_variants", :method => "post" do %>
		<div class="product-select">
			<table class="product-select-table">
				<tr class="product-select-row">
					<td class="criteria-column"></td>
					<td class="product-column"> <%= label_tag :product_id %>
					<%= select_tag :product_id %> </td>
					<td class="product-column">
						<div id='product_image'>
						</div>
					</td>
				</tr>
			</table>
		</div>
		<div class="variant-select">
			<table class="product-select-table">
				<tr class="product-select-row">
					<td class="criteria-column"></td>
					<td class="product-column"> <%= label_tag :variant_1_id %>
					<%= select_tag :variant_1_id %> </td>
					<td class="product-column"> <%= label_tag :variant_2_id %>
					<%= select_tag :variant_2_id %>
					<br/>
					</td>
				</tr>
			</table>
		</div>
		<% end %>
		<table class="compare-table">
			<tr>
				<th class="criteria-column"></th>
				<th class="compare-column" id='variant_1_header'><%= loader %></th>
				<th></th>
				<th class="compare-column" id='variant_2_header'><%= loader %></th>
			</tr>
			<tr>
				<td><strong>Price:</strong></td>
				<td id='variant_1_price'></td>
				<td>
					<a class='btn merge-left' data-key_name='price'>&lt;</a>
					<a class='btn merge-right' data-key_name='price'>&gt;</a>
				</td>
				<td id='variant_2_price'></td>
			</tr>
			<tr>
				<td><strong>Compare at Price:</strong></td>
				<td id='variant_1_compare_at_price'></td>
				<td>
					<a class='btn merge-left' data-key_name='compare_at_price'>&lt;</a>
					<a class='btn merge-right' data-key_name='compare_at_price'>&gt;</a>
				</td>
				<td id='variant_2_compare_at_price'></td>
			</tr>
			<tr>
				<td><strong>Weight(g):</strong></td>
				<td id='variant_1_grams'></td>
				<td>
					<a class='btn merge-left' data-key_name='grams'>&lt;</a>
					<a class='btn merge-right' data-key_name='grams'>&gt;</a>
				</td>
				<td id='variant_2_grams'></td>
			</tr>
			<tr>
				<td><strong>SKU:</strong></td>
				<td id='variant_1_sku'></td>
				<td>
					<a class='btn merge-left' data-key_name='sku'>&lt;</a>
					<a class='btn merge-right' data-key_name='sku'>&gt;</a>
				</td>
				<td id='variant_2_sku'></td>
			</tr>
			<tr>
				<td><strong>Taxable:</strong></td>
				<td id='variant_1_taxable'></td>
				<td>
					<a class='btn merge-left' data-key_name='taxable'>&lt;</a>
					<a class='btn merge-right' data-key_name='taxable'>&gt;</a>
				</td>
				<td id='variant_2_taxable'></td>				
			</tr>
			<tr>
				<td><strong>Requires Shipping:</strong></td>
				<td id='variant_1_requires_shipping'></td>
				<td>
					<a class='btn merge-left' data-key_name='requires_shipping'>&lt;</a>
					<a class='btn merge-right' data-key_name='requires_shipping'>&gt;</a>
				</td>
				<td id='variant_2_requires_shipping'></td>
			</tr>
			<tr>
				<td><strong>Inventory Quantity:</strong></td>
				<td id='variant_1_inventory_quantity'></td>
				<td></td>
				<td id='variant_2_inventory_quantity'></td>
			</tr>
			<tr>
				<td><strong>Inventory Management:</strong></td>
				<td id='variant_1_inventory_management'></td>
				<td>
					<a class='btn merge-left' data-key_name='inventory_management'>&lt;</a>
					<a class='btn merge-right' data-key_name='inventory_management'>&gt;</a>
				</td>
				<td id='variant_2_inventory_management'></td>
			</tr>
			<tr>
				<td><strong>Inventory Policy:</strong></td>
				<td id='variant_1_inventory_policy'></td>
				<td>
					<a class='btn merge-left' data-key_name='inventory_policy'>&lt;</a>
					<a class='btn merge-right' data-key_name='inventory_policy'>&gt;</a>
				</td>
				<td id='variant_2_inventory_policy'></td>
			</tr>
		</table>
	</div>
</div>
<script type='text/javascript'>
	$(function() {
		retrieveProductsAndLoadSelect(false, ["#product_id"]);
		retrieveProductImageAndLoad($("#product_id").val(), "#product_image");
		retrieveVariantsAndLoadSelect(false, ["#variant_1_id", "#variant_2_id"]);
		
		retrieveVariantAndLoadData(true, $("#variant_1_id").val(), "1");
		retrieveVariantAndLoadData(true, $("#variant_2_id").val(), "2");
	});

	$("#product_id").change(function() {
		retrieveProductImageAndLoad($("#product_id").val(), "#product_image");
		
		$("#variant_1_header").html('<%= loader %>');
		$("#variant_2_header").html('<%= loader %>');
		
		retrieveVariantsAndLoadSelect(false, ["#variant_1_id", "#variant_2_id"]);
		retrieveVariantAndLoadData(true, $("#variant_1_id").val(), "1");
		retrieveVariantAndLoadData(true, $("#variant_2_id").val(), "2");
	});
	
	$("#variant_1_id").change(function() {
		$("#variant_1_header").html('<%= loader %>');
		retrieveVariantAndLoadData(true, $("#variant_1_id").val(), "1");
	});

	$("#variant_2_id").change(function() {
		$("#variant_2_header").html('<%= loader %>');
		retrieveVariantAndLoadData(true, $("#variant_2_id").val(), "2");
	});
	
	$(".merge-left").on("click", function(){
		merge("variant", "1", $(this).data("key_name"));
	});
	
	$(".merge-right").on("click", function(){
		merge("variant", "2", $(this).data("key_name"));
	});
</script>
